<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:textAlignment="center">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center|top"
      android:orientation="vertical"
      android:padding="24dp">

    <TextView
        android:id="@+id/textViewPad4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textDirection="ltr"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/title_name"
        android:textAlignment="center"
        android:textSize="26sp" />

    <Button
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=""
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewPad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textDirection="ltr"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewNextNewsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nextNews"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewNextNewsStr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textDirection="ltr" />

    <TextView
        android:id="@+id/textViewPad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:visibility="invisible" />

<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

      <TextView
          android:id="@+id/textView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:text="@string/newsLink"
          android:textAlignment="center"
          android:textColor="#03A9F4"
          android:textSize="20sp" />

<!--    </RelativeLayout>-->

    <TextView
        android:id="@+id/textViewPad5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewShabes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/justListen"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPad6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewClock2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewClock3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewPad7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newsLength"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextDuration"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="4"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewPad9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textDirection="ltr"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewEveryHourLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newsFreq"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextEveryHour"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="4"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewPad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="invisible" />

	<!--ImageView
		android:id="@+id/info_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@android:drawable/ic_dialog_info"
		android:contentDescription="Information" /-->
	
    <TextView
        android:id="@+id/textViewTodoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todoList"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:singleLine="false"
        android:text="IL-Tel Aviv, פלטה, מיחם, שעון שבת, מנורה קטנה במסדרון, מזגן"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:textAlignment="center" />

    <Button
        android:id="@+id/rateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate"
        android:textAlignment="center" />

  </LinearLayout>

</ScrollView>